<script type='text/x-handlebars-template' id='faostat_ui_welcome_page_structure'>
    <div class='row'>
        <div class='col-xs-12'>
            <p>
                <div id='welcome_text'></div>
            </p>
            <h3>
                {{related_documents}}
            </h3>
            {{#if hasDocuments}}
                {{#each documents}}
                    <div class='row'>
                        <div class='col-lg-12'>
                            <i class='fa fa-archive'></i>
                            <a target='_blank' href='{{base_url}}{{FileName}}'>
                                &nbsp;{{FileTitle}}
                            </a>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <p>
                    {{no_docs_available}}{{domain_name}}.
                </p>
            {{/if}}
        </div>
    </div>
</script>