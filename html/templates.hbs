<script type='text/x-handlebars-template' id='faostat_ui_welcome_page_structure'>
    <div class='row'>
        <div class='col-xs-12'>

            <p>
                {{text}}
            </p>

            {{#if hasDocuments}}
                <h3>
                    {{related_documents}}
                </h3>

                {{#each documents}}
                    <div class='row'>
                        <div class='col-lg-12'>
                            <i class='fa fa-archive'></i>
                            <a target='_blank' href='{{base_url}}{{FileName}}'>
                                &nbsp;{{FileTitle}}
                            </a>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <!--<p>
                    No documents available for {{domain_name}}.
                </p>-->
            {{/if}}


            <h3>
                {{interactive_download_title}}
            </h3>
            <p>
                {{interactive_download_text}}
            </p>
            <h3>
                {{bulk_downloads_title}}
            </h3>
            <p>
                {{bulk_downloads_text}}
            </p>
            <h3>
                {{metadata_title}}
            </h3>
            <p>
                {{metadata_text}}
            </p>



        </div>
    </div>
</script>